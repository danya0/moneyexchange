mixin section1()
  mixin selectItem(img, text)
    .select-item
      img(src=img, alt=text).select-item__icon
      span= text
  section.section.section1
    .section1-bg
    .container
      h1.section1__title Мультивалютный обменный сервис 24/7
      h3.section1__subtitle Быстрый обмен без скрытых комиссий
      form.form-main#currency-form
        .form-colum
          .form-row
            p.form__name Вы отдаете
          .form-row
            p.form__sum Сумма
            .form-input-block
              input(type="text" value="100.00")
              .form-input-block__select
                .select__header
                  .select__current
                    .select-item-current
                      img(src="img/1/rub.png", alt="rub").select-item__icon
                      span RUB
                img.select__icon(src="img/1/select-arrow.svg", alt="arrow")
                .select__body
                  +selectItem('img/1/rub.png', 'RUB')
                  +selectItem('img/1/usd.png', 'USD')
                  +selectItem('img/1/eur.png', 'EUR')
        .form__trade-icon
          img(src="img/1/arrow.svg", alt="arrow").form__trade-arrow
          img(src="img/1/arrow.svg", alt="arrow").form__trade-arrow
        .form-colum
          .form-row
            p.form__name Вы получаете
            span.form__name-small с учетом комиссии ПС (0.5 %)
          .form-row
            p.form__sum Сумма
            .form-input-block
              input(type="text" value="0" disabled="true")
              .form-input-block__select
                .select__header
                  .select__current
                    .select-item-current
                      img(src="img/1/usd.png", alt="usd").select-item__icon
                      span USD
                img.select__icon(src="img/1/select-arrow.svg", alt="arrow")
                .select__body
                  +selectItem('img/1/rub.png', 'RUB')
                  +selectItem('img/1/usd.png', 'USD')
                  +selectItem('img/1/eur.png', 'EUR')
        input.form__button(type="button", value="Обменять")